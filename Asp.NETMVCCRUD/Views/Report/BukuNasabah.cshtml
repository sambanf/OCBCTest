@section scripts{
    <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>

    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            $('#startdate').val(new Date());
            $('#enddate').val(new Date());
        });

        function searchreport() {
            var data = { startdate: $("#startdate").val(), enddate: $("#enddate").val(), Operator: $("#oper").val() }
            $('#reporttable').DataTable().clear().destroy();
            dataTable = $("#reporttable").DataTable({
                "ajax": {
                    "url": "/Report/GetData",
                    "type": "GET",
                    "datatype": "json",
                    "data": data
                },
                "columns": [
                    { "data": "TransactionID" },
                    { "data": "TransDate" },
                    { "data": "Description" },
                    { "data": "DebitCreditStatus" },
                    { "data": "Amount", render: $.fn.dataTable.render.number(',', '.', 0, 'Rp') },

                ],
                "language": {
                    "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "order": [[1, 'desc']]
            });
            dataTable.on('order.dt search.dt', function () {
                dataTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        }



    </script>
}
