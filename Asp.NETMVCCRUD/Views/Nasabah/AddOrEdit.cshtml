@model Asp.NETMVCCRUD.Models.tm_Nasabah
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Nasabah", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Status_FK)
    if (Model.AccountID == 0)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.AccountID, new { @class = "control-label" })
            @Html.EditorFor(model => model.AccountID, new { htmlAttributes = new { @class = "form-control", @Value = "" } })
            @Html.ValidationMessageFor(model => model.AccountID)
        </div>
    }
    else
    {
        <div class="form-group">
            @Html.LabelFor(model => model.AccountID, new { @class = "control-label" })
            @Html.EditorFor(model => model.AccountID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AccountID)
        </div>
    }


    <div class="form-group">
        @Html.LabelFor(model => model.Nama, new { @class = "control-label" })
        @Html.EditorFor(model => model.Nama, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}